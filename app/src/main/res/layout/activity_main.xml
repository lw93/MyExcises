<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.liuweizhg.udacityhomework.MainActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_below="@+id/hello"
        android:id="@+id/but_one"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/geryblack"
        android:text="one"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        />
    <Button
        android:layout_below="@+id/but_one"
        android:id="@+id/but_two"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/geryblack"
        android:text="two"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        />
    <Button
        android:layout_below="@+id/but_two"
        android:id="@+id/but_three"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/geryblack"
        android:text="three"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        />
    <Button
        android:layout_below="@+id/but_three"
        android:id="@+id/but_four"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/geryblack"
        android:text="four"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        />
    <Button
        android:layout_below="@+id/but_four"
        android:id="@+id/but_five"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/geryblack"
        android:text="five"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        />

</RelativeLayout>
